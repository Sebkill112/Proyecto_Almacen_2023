@model IEnumerable<Proyecto_Almacen_T5DN_2023.Models.Producto>

@{
	ViewData["Title"] = "INGRESO";
}


<head>
    <meta name="viewport" content="width=device-width" />
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
	<link rel="stylesheet" href="~/css/dataTables.bootstrap5.min.css" asp-append-version="true" />
	<!-- Los iconos tipo Solid de Fontawesome-->
    <title>Ingreso de Productos</title>
	<!-- Los iconos tipo Solid de Fontawesome-->
	<link rel="stylesheet"
		  href="https://use.fontawesome.com/releases/v5.0.8/css/solid.css">
	<script src="https://use.fontawesome.com/releases/v5.0.7/js/all.js"></script>
</head>

	<body>
		 <table class="table table-hover" id="tableProductos" style="border: 1px">
							<thead>
								<tr>

				           <th>
					@Html.DisplayNameFor(model => model.idProducto)
				          </th>
				<th>
					@Html.DisplayNameFor(model => model.nombreProducto)
				</th>

				<th></th>

								</tr>
							</thead>
							<tbody>
			            @foreach (var item in Model)
			                 {
				             <tr>
					         <td>
						@Html.DisplayFor(modelItem => item.idProducto)
					         </td>
					           <td>
						@Html.DisplayFor(modelItem => item.nombreProducto)
					          </td>
				                </tr>
			                     }
							</tbody>

						</table>

			<form action="" method="post" id="frmVenta" class="row g-3">
				<div class="col-sm-4">
					<div class="card">

						<div class="card-body">
							<div class="form-group">
								<label style="margin-bottom:10px">Datos del Empleado</label>
							</div>

							<div class="form-group d-flex">
								<div class="col-sm-6 d-flex">
									<input type="text" name="codEmpleado" class="form-control" id="id-emp" value="${sessionScope.idUsuario}" readonly>

								</div>
								<div class="col-sm-6" style="padding-left: 30px">
									<input type="text" id="id-nomEmp"
										   class="form-control" readonly>
								</div>
							</div>
							<br>
							<div class="form-group">
								<label style="margin-bottom:10px">Datos del Cliente</label>
							</div>

							<div class="form-group d-flex">
								<div class="col-sm-6 d-flex">
									<input type="text" name="codCliente" class="form-control" id="id-cliente" required>
									<input type="button" name="buscarCliente"
										   value="Buscar" class="btn btn-outline-info btn-buscar">
								</div>
								<div class="col-sm-6" style="padding-left: 30px">
									<input type="text" name="txtNombre" id="id-nombreCliente"
										   class="form-control" required>
								</div>
							</div>
							<br>
							<div class="form-group">
								<label style="margin-bottom:10px">Datos del producto</label>
							</div>

							<div class="form-group">
								<br />
						<input type="number" name="cantProd" class="form-control" id="id-cant" required>
		                    
							</div>
							<div class="form-group d-flex" style="margin-top:10px;margin-bottom:10px">
							</div>
						</div>


					</div>


				</div>
				<div class="col-sm-8" style="padding-left: 1%">
					<div class="card">
						<div class="card-body">
							<div class=" row g-3">
								<div class="col-md-4">
									<strong><label style="margin: 5px">Nro.Serie</label></strong>
									<input type="text" name="serie"
										   class="form-control" id="id-serie" readonly>
								</div>
								<div class="col-md-4">
									<strong><label style="margin: 5px">Fecha de Venta</label></strong>
									<input type="text" name="fecha"
										   class="form-control" id="id-fecha" readonly>
								</div>
							</div>

							<br>
							<table class="table table-hover" id="tableVentas" style="border: 1px">
								<thead>
									<tr>

										<th>Código</th>
										<th>Descripción</th>
										<th>Precio</th>
										<th>Cantidad</th>
										<th>Subtotal</th>
										<th class="accion">Acciones</th>
									</tr>
								</thead>
								<tbody>
								</tbody>

							</table>

							<div class="card-footer d-flex">
								<div class="col-sm-6 venta">
									<button type="submit" class="btn btn-success"><i class="fas fa-check-square"></i> Grabar Venta</button>
									<button type="submit" class="btn btn-info " onclick="print()"><i class="fas fa-print"></i></button>

								</div>
								<div class="col-sm-4 ml-auto d-flex">
									<strong><label style="margin: 5px">S/.</label></strong>
									<input type="text" name="txtTotal" value="" class="form-control" id="id-total">
								</div>
							</div>
						</div>
					</div>
				</div>
			</form>

	@section Scripts
		{


		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
			integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
			crossorigin="anonymous"></script>

		<!-- JS para la tabla -->
		<script src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
		<script src="https://cdn.datatables.net/1.12.1/js/dataTables.bootstrap5.min.js"></script>
		
		<script>
			
		</script>
	}

</body>






